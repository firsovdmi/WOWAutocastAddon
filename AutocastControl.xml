<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:schemaLocation="http://www.blizzard.com/wow/ui/" xmlns="http://www.blizzard.com/wow/ui/">
	 <Script file="Core.lua"/>
   <Frame
       name="AutocastControlFrame"
       toplevel="true"
       frameStrata="DIALOG"
       movable="true"
       enableMouse="true"
       hidden="false"
       parent="UIParent">
       <Size>
           <AbsDimension x="200" y="200"/>
       </Size>
       <Anchors>
           <Anchor point="CENTER">
               <Offset><AbsDimension x="-300" y="200"/></Offset>
           </Anchor>
       </Anchors>
       <Backdrop
           bgFile="Interface\DialogFrame\UI-DialogBox-Background"
           edgeFile="Interface\DialogFrame\UI-DialogBox-Border"
           tile="true">
           <BackgroundInsets>
               <AbsInset left="3" right="3" top="3" bottom="3"/>
           </BackgroundInsets>
           <TileSize>
               <AbsValue val="10"/>
           </TileSize>
           <EdgeSize>
               <AbsValue val="10"/>
           </EdgeSize>
       </Backdrop>
       <Layers>
           <Layer level="ARTWORK">
               <Texture name="AutocastControlFrameHeader" file="Interface\DialogFrame\UI-DialogBox-Header">
                   <Size>
                       <AbsDimension x="394" y="50"/>
                   </Size>
                   <Anchors>
                       <Anchor point="TOP">
                           <Offset>
                               <AbsDimension x="0" y="1"/>
                           </Offset>
                       </Anchor>
                   </Anchors>
               </Texture>
               <FontString inherits="GameFontNormal" text="AutocastControl">
                   <Anchors>
                       <Anchor point="TOP" relativeTo="AutocastControlFrameHeader">
                           <Offset>
                               <AbsDimension x="0" y="-10"/>
                           </Offset>
                       </Anchor>
                   </Anchors>
               </FontString>
           </Layer>
       </Layers>
       <Frames>
           <Frame name="ControlTab" hidden="false">
  <Size x="200" y="200"/>
  <Anchors>
    <Anchor point="CENTER"/>
  </Anchors>
  <Frames>
    <Button name="OnOffCastButton" inherits="UIPanelButtonTemplate" text="ON">
      <Size x="120" y="21"/>
      <Anchors>
        <Anchor point="TOPLEFT">
		   <Offset>
			   <AbsDimension x="3" y="-30"/>
		   </Offset>
		</Anchor>
      </Anchors>
	  <Scripts>
            <OnClick>
                OnOffCast();
            </OnClick>
      </Scripts>
    </Button>
  </Frames>
           </Frame>   
           <Frame name="LogTab" hidden="true">
               <Anchors>
                   <Anchor point="TOPLEFT"/>
                   <Anchor point="BOTTOMRIGHT"/>
               </Anchors>
               <Layers>
                   <Layer level="ARTWORK">
                       <FontString inherits="GameFontNormal" text="My Frame 2">
                           <Anchors>
                               <Anchor point="TOPLEFT" relativeTo="$parent">
                                   <Offset>
                                       <AbsDimension x="20" y="-30"/>
                                   </Offset>
                               </Anchor>
                           </Anchors>
                       </FontString>
                   </Layer>
               </Layers>
               <Frames>
               </Frames> 
           </Frame>
           <Button name="$parentTab1" inherits="CharacterFrameTabButtonTemplate" id="1" text="Управление">
               <Anchors>
                   <Anchor point="CENTER" relativePoint="BOTTOMLEFT">
                       <Offset>
                           <AbsDimension x="60" y="-12"/>
                       </Offset>
                   </Anchor>
               </Anchors>
               <Scripts>
                   <OnClick>
                       PanelTemplates_SetTab(AutocastControlFrame, 1);
                       ControlTab:Show();
                       LogTab:Hide();
                   </OnClick>
               </Scripts>
           </Button>
           <Button name="$parentTab2" inherits="CharacterFrameTabButtonTemplate" id="2" text="Логи">
               <Anchors>
                   <Anchor point="LEFT" relativeTo="$parentTab1" relativePoint="RIGHT">
                       <Offset>
                           <AbsDimension x="-16" y="0"/>
                       </Offset>
                   </Anchor>
               </Anchors>
               <Scripts>
                   <OnClick>
                       PanelTemplates_SetTab(AutocastControlFrame, 2);
                       ControlTab:Hide();
                       LogTab:Show();
                   </OnClick>
               </Scripts>
           </Button>
       </Frames>
       <Scripts>
           <OnLoad>
               this.elapsed = 0;
               PanelTemplates_SetNumTabs(AutocastControlFrame, 2);
               PanelTemplates_SetTab(AutocastControlFrame, 1);
			   self:RegisterForDrag("LeftButton");
           </OnLoad>
           <OnShow>
               PlaySound("UChatScrollButton");
               PanelTemplates_SetTab(AutocastControlFrame, 1);
               ControlTab:Show()
               LogTab:Hide()
           </OnShow>
<OnDragStart>self:StartMoving();</OnDragStart>
<OnDragStop>self:StopMovingOrSizing();</OnDragStop>

       </Scripts>
   </Frame>
</Ui>